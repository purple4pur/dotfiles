alias vims 'vim ~/.tcshrc'
alias srcs 'source ~/.tcshrc'

alias hh 'history 30'
alias jj 'jobs'
alias ll 'ls -lhF'
alias pg 'grep -P'
alias rl 'readlink -f'
alias so 'source'
alias tt 'tmux'

alias pd 'pushd'
alias po 'popd'
alias dd 'dirs -v'

alias gad 'git add'
alias gb 'git branch'
alias gcmt 'git commit'
alias gco 'git checkout'
alias gd 'git diff'
alias gdt 'git difftool --dir-diff'
alias glg 'git log --graph --pretty="%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset" --date=short'
alias gst 'git status'

set GREEN="%{`tput setaf 2`%}"
set YELLOW="%{`tput setaf 3`%}"
set BLUE="%{`tput setaf 4`%}"
set prompt="\n${YELLOW}%B%n%b @ ${GREEN}%B%M%b in ${BLUE}%B%~%b\n${GREEN}%B>%b "

bindkey '^p' history-search-backward
bindkey '^n' history-search-forward

# vim: ft=tcsh
